<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/imgShow"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />
    <ImageView
        android:id="@+id/ImageView_Casda"
        android:layout_below="@+id/imgShow"
        android:layout_above="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="5sp"
        android:layout_marginBottom="30dp"
        android:text="123"/>
<!--        android:layout_marginBottom="30dp"-->


    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        >


        <EditText
            android:id="@+id/EditText"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:hint="值域"
            android:inputType="number"
            android:maxLength="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnRun"
            android:text="二值"
            android:textSize="16sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnReset"
            android:text="重置"
            android:textSize="16sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnRun2"
            android:text="灰度"
            android:textSize="16sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/img_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginStart="10dp"
        android:hint="图片路径" />
    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_path"
        android:layout_weight="1"
        android:text="相册"
        android:textSize="16sp" />
    <Button
        android:id="@+id/btn_add2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnRun3"
        android:layout_below="@+id/btn_add"
        android:text="抖动"
        android:textSize="16sp" />
    <Button
        android:id="@+id/btn_add3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_add2"
        android:text="裁剪"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_add4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_add3"
        android:onClick="btnRun4"
        android:text="保存"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_add5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_add4"
        android:onClick="btnRun5"
        android:text="NFC"
        android:textSize="16sp" />

</RelativeLayout>